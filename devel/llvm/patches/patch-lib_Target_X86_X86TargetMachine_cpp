   addPass(createX86EvexToVexInsts());
   addPass(createX86DiscriminateMemOpsPass());
   addPass(createX86InsertPrefetchPass());
+  addPass(createX86FixupGadgetsPass());
   addPass(createX86InsertX87waitPass());
