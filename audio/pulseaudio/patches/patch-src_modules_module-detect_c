+#ifdef __OpenBSD__
+static int detect_sndio(pa_core *c, int just_one) {
+    char args[64];
+    pa_module *m = NULL;
+
+    pa_snprintf(args, sizeof(args), "device=%s", SIO_DEVANY);
+
+    if (pa_module_load(&m, c, "module-sndio", args) < 0)
+        return 0;
+
+    return 1;
+}
